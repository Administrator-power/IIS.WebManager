<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">  
  <ItemGroup>  
    <NodeModulesDir Include="node_modules" /> 
  </ItemGroup>  
  <Target Name="NpmInstall" BeforeTargets="PreComputeCompileTypeScript" Condition="!Exists(@(NodeModulesDir))">
    <Exec Command="npm install" />
  </Target>
  <Target Name="NpmInstall" AfterTargets="CompileTypeScript" Condition="'$(Configuration)' == 'Release'">
    <Exec Command="npm prune --production" />
  </Target>
</Project>